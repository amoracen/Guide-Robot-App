<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient_1"
    android:importantForAccessibility="no">

    <LinearLayout
        android:id="@+id/settingFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:importantForAccessibility="no"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="25dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".ui.dashboardactivity.DashboardFragment">

        <androidx.appcompat.widget.ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ffff"
            android:contentDescription="@null"
            android:minWidth="50dp"
            android:minHeight="50dp">

            <TextView
                android:id="@+id/bluetoothTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:contentDescription="@string/bluetooth"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:padding="10dp"
                android:text="@string/bluetooth"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bluetoothLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/bluetooth_is_disable"
                android:focusable="true"
                android:minWidth="60dp"
                android:minHeight="60dp"
                android:src="@drawable/ic_bluetooth_disabled" />
        </androidx.appcompat.widget.ActionMenuView>

        <androidx.appcompat.widget.ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:minWidth="50dp"
            android:minHeight="50dp">

            <Button
                android:id="@+id/doorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_small"
                android:contentDescription="@string/take_me_to_the_door"
                android:focusable="true"
                android:padding="10dp"
                android:text="@string/take_me_to_the_door"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.ActionMenuView>

        <androidx.appcompat.widget.ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:minWidth="50dp"
            android:minHeight="50dp">

            <Button
                android:id="@+id/option2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_small"
                android:contentDescription="@string/take_me_to_option_2"
                android:focusable="true"
                android:padding="10dp"
                android:text="@string/take_me_to_option_2"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.ActionMenuView>

        <androidx.appcompat.widget.ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:minWidth="50dp"
            android:minHeight="50dp">

            <Button
                android:id="@+id/option3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_small"
                android:contentDescription="@string/go_to_docking_station"
                android:focusable="true"
                android:padding="10dp"
                android:text="@string/go_to_docking_station"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.ActionMenuView>

        <androidx.appcompat.widget.ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:minWidth="50dp"
            android:minHeight="50dp">

            <Button
                android:id="@+id/shutdownButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_small"
                android:contentDescription="@string/shutdown_robot"
                android:focusable="true"
                android:padding="10dp"
                android:text="@string/shutdown_robot"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.ActionMenuView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/micButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/select_microphone"
            android:minWidth="50dp"
            android:minHeight="50dp"
            app:fabCustomSize="75dp"
            app:maxImageSize="50dp"
            app:srcCompat="@drawable/ic_mic_blue_75dp" />

        <TextView
            android:id="@+id/feedback_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:accessibilityLiveRegion="polite"
            android:background="@null"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:visibility="invisible" />
    </LinearLayout>
</ScrollView>